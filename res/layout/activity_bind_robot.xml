<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bjsz"
    android:orientation="vertical"
    tools:context=".BindRobotActivity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <SurfaceView
            android:id="@+id/qrcodesurface"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <com.mining.app.zxing.view.ViewfinderView
            android:id="@+id/viewfinder_view"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" >
        </com.mining.app.zxing.view.ViewfinderView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/robot_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_robot_id"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@drawable/edit_shape_login" />

        <EditText
            android:id="@+id/robot_serial"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="@string/input_robot_serial_number"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@drawable/edit_shape_login" />

        <Button
            android:id="@+id/bind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:background="@drawable/bind_button_shape"
            android:textColor="@color/white"
            android:text="@string/bind" />
    </LinearLayout>

</FrameLayout>