<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:background="@drawable/ic_background" >

    <!-- 左边列表 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingRight="15dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <Button
	            android:id="@+id/btn_back"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/selector_actionbar_back" />
        </LinearLayout>

        <!-- 通话列表 -->
	    <ListView
	        android:id="@+id/friend_listview"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginStart="10dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="5dp"
	        android:fadingEdge="none"
	        android:cacheColorHint="@android:color/transparent"
	        android:listSelector="#ffffff"
	        android:divider="#204954"
	        android:dividerHeight="1px"
	        android:scrollbars="none" />

    </LinearLayout>

    <!-- 右边拨盘 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" >

            <Button
                android:id="@+id/btn_robotid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="Robot"
                android:text="@string/robotid"
                android:textColor="@drawable/selector_numbertype"
                android:textSize="18sp"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/leftslash" />

            <Button
                android:id="@+id/btn_roomid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="Room"
                android:text="@string/roomid"
                android:textColor="@drawable/selector_numbertype"
                android:textSize="18sp"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/leftslash" />

            <Button
                android:id="@+id/btn_phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="Phone"
                android:text="@string/phonenumber"
                android:textColor="@drawable/selector_numbertype"
                android:textSize="18sp"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal" >"

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:layout_gravity="center_vertical"
                android:textSize="24sp" />

	        <Button
	            android:id="@+id/btn_backspace"
	            android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/selector_backspace" />

        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">
            <Button
                android:id="@+id/btn_number_one"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/style_bt_dial"
                android:text="@string/number_one"
                android:tag="1" />
            <Button
                android:id="@+id/btn_number_two"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/style_bt_dial"
                android:text="@string/number_two"
                android:tag="2" />

            <Button
                android:id="@+id/btn_number_three"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/style_bt_dial"
                android:text="@string/number_three"
                android:tag="3" />

            <Button
                android:id="@+id/btn_dial"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/style_bt_dial"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="3dp"
                android:layout_gravity="bottom" />

            <Button
                android:id="@+id/btn_number_four"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/style_bt_dial"
                android:text="@string/number_four"
                android:tag="4" />
            <Button
                android:id="@+id/btn_number_five"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/style_bt_dial"
                android:text="@string/number_five"
                android:tag="5" />
            <Button
                android:id="@+id/btn_number_six"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/style_bt_dial"
                android:text="@string/number_six"
                android:tag="6" />
            <Button
                android:id="@+id/btn_number_seven"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/style_bt_dial"
                android:text="@string/number_seven"
                android:tag="7" />
            <Button
                android:id="@+id/btn_number_eight"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/style_bt_dial"
                android:text="@string/number_eight"
                android:tag="8" />
            <Button
                android:id="@+id/btn_number_nine"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/style_bt_dial"
                android:text="@string/number_nine"
                android:tag="9" />
            <Button
                android:id="@+id/btn_number_asterisk"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/style_bt_dial"
                android:text="@string/number_asterisk"
                android:tag="*" />
            <Button
                android:id="@+id/btn_number_zero"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/style_bt_dial"
                android:text="@string/number_zero"
                android:tag="0" />
            <Button
                android:id="@+id/btn_number_pound"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/style_bt_dial"
                android:text="@string/number_pound"
                android:tag="#" />

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>