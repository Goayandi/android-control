<com.layout.utils.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".PowerListActivity" >

    <TextView
        android:id="@+id/power_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="3%"
        app:layout_textSizePercent="4%"
        android:gravity="center"
        android:text="@string/disconnect"
        android:drawableLeft="@drawable/back"
        android:textColor="@color/white" />

    <com.layout.utils.PercentRelativeLayout
        android:id="@+id/rl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/power_title"
        app:layout_heightPercent="35%"
        app:layout_marginLeftPercent="2%"
        app:layout_marginRightPercent="2%"
        app:layout_marginBottomPercent="3%"
        app:layout_widthPercent="96%" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/robot2" />

    </com.layout.utils.PercentRelativeLayout>

    <TextView
        android:id="@+id/tv_battery"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_marginTopPercent="42%"
        app:layout_heightPercent="4%"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:gravity="center"
        android:drawableLeft="@drawable/battery"
        android:text=""/>

    <com.layout.utils.PercentRelativeLayout
        android:id="@+id/prl1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/rl"
        app:layout_marginLeftPercent="2%"
        style="@style/style_rl_control" >

        <Button
            android:id="@+id/bt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/style_bt_control"
            android:background="@drawable/new_sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@id/bt_1"
            style="@style/style_tv_control"
            android:text="@string/video1"
            />
    </com.layout.utils.PercentRelativeLayout>

    <com.layout.utils.PercentRelativeLayout
        android:id="@+id/prl2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/rl"
        android:layout_toRightOf="@id/prl1"
        style="@style/style_rl_control">

        <Button
            android:id="@+id/bt_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/style_bt_control"
            android:background="@drawable/new_jk"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@id/bt_2"
            android:text="@string/monitoring"
            style="@style/style_tv_control" />
    </com.layout.utils.PercentRelativeLayout>

    <com.layout.utils.PercentRelativeLayout
        android:id="@+id/prl3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_toRightOf="@id/prl2"
        android:layout_below="@id/rl"
        style="@style/style_rl_control" >

        <Button
            android:id="@+id/bt_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/new_nz"
            style="@style/style_bt_control" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@id/bt_3"
            android:text="@string/alert_and_remind"
            style="@style/style_tv_control" />
    </com.layout.utils.PercentRelativeLayout>

    <com.layout.utils.PercentRelativeLayout
        android:id="@+id/prl4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/prl1"
        app:layout_marginLeftPercent="2%"
        style="@style/style_rl_control" >

        <Button
            android:id="@+id/bt_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/new_photo"
            style="@style/style_bt_control" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@id/bt_4"
            android:text="@string/album"
            style="@style/style_tv_control" />
    </com.layout.utils.PercentRelativeLayout>

    <com.layout.utils.PercentRelativeLayout
        android:id="@+id/prl5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/prl1"
        android:layout_toRightOf="@id/prl4"
        style="@style/style_rl_control" >

        <Button
            android:id="@+id/bt_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/new_le"
            style="@style/style_bt_control" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@id/bt_5"
            android:text="@string/tpty"
            style="@style/style_tv_control"/>
    </com.layout.utils.PercentRelativeLayout>

    <com.layout.utils.PercentRelativeLayout
        android:id="@+id/prl6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="2%"
        android:layout_below="@id/prl1"
        style="@style/style_rl_control" >

        <Button
            android:id="@+id/bt_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/new_sz"
            style="@style/style_bt_control" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@id/bt_6"
            android:text="@string/setting"
            style="@style/style_tv_control" />
    </com.layout.utils.PercentRelativeLayout>

</com.layout.utils.PercentRelativeLayout>