<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.robotcontrol.activity.ConnectActivity" >

    <RelativeLayout
        android:id="@+id/connect_title"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        android:background="@color/blue" >

        <Button
            android:id="@+id/findrobot"
            android:layout_width="30dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:text="添加"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="连接机器人"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/setting_into"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/white" />
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_bind"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/connect_title" >

        <com.baoyz.swipemenulistview.SwipeMenuListView
            android:id="@+id/robotlist_bind"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </com.baoyz.swipemenulistview.SwipeMenuListView>
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>