<com.layout.utils.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".PowerListActivity" >

    <TextView
        android:id="@+id/power_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="3%"
        app:layout_textSizePercent="4%"
        android:gravity="center"
        android:text="返回"
        android:drawableLeft="@drawable/back"
        android:textColor="@color/white" />

    <com.layout.utils.PercentRelativeLayout
        android:id="@+id/rl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/power_title"
        app:layout_heightPercent="35%"
        app:layout_marginLeftPercent="2%"
        app:layout_marginRightPercent="2%"
        app:layout_marginBottomPercent="3%"
        app:layout_widthPercent="96%" >

        <LinearLayout
            android:id="@+id/ll_tmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/sd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#67faff"
                android:textSize="20sp"
                android:text="湿度:67%"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#67faff"
                android:textSize="20sp"
                android:text="温度:23°C"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_door"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerInParent="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/p1" />

    </com.layout.utils.PercentRelativeLayout>

    <com.layout.utils.PercentRelativeLayout
        android:id="@+id/video_chat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/rl"
        app:layout_marginLeftPercent="2%"
        style="@style/style_rl_control" >

        <Button
            android:id="@+id/video_chat_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/style_bt_control"
            android:background="@drawable/deng"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@id/video_chat_img"
            style="@style/style_tv_control"
            android:text="灯开关"
            />
    </com.layout.utils.PercentRelativeLayout>

    <com.layout.utils.PercentRelativeLayout
        android:id="@+id/power_photo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/rl"
        android:layout_toRightOf="@id/video_chat"
        style="@style/style_rl_control">

        <Button
            android:id="@+id/power_photo_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/style_bt_control"
            android:background="@drawable/men"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@id/power_photo_img"
            android:text="门开关"
            style="@style/style_tv_control" />
    </com.layout.utils.PercentRelativeLayout>

    <com.layout.utils.PercentRelativeLayout
        android:id="@+id/video_monitor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_toRightOf="@id/power_photo"
        android:layout_below="@id/rl"
        style="@style/style_rl_control" >

        <Button
            android:id="@+id/video_monitor_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/dg"
            style="@style/style_bt_control" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@id/video_monitor_img"
            android:text="灯光管理"
            style="@style/style_tv_control" />
    </com.layout.utils.PercentRelativeLayout>

    <com.layout.utils.PercentRelativeLayout
        android:id="@+id/power_task"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/video_monitor"
        app:layout_marginLeftPercent="2%"
        style="@style/style_rl_control" >

        <Button
            android:id="@+id/power_task_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/cl"
            style="@style/style_bt_control" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@id/power_task_img"
            android:text="窗帘"
            style="@style/style_tv_control" />
    </com.layout.utils.PercentRelativeLayout>

    <com.layout.utils.PercentRelativeLayout
        android:id="@+id/power_setting"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/video_monitor"
        android:layout_toRightOf="@id/power_task"
        style="@style/style_rl_control" >

        <Button
            android:id="@+id/power_setting_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/yanwu"
            style="@style/style_bt_control" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@id/power_setting_img"
            android:text="烟雾"
            style="@style/style_tv_control"/>
    </com.layout.utils.PercentRelativeLayout>

    <com.layout.utils.PercentRelativeLayout
        android:id="@+id/more"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="2%"
        android:layout_below="@id/video_monitor"
        style="@style/style_rl_control" >

        <Button
            android:id="@+id/bt_more"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/wasi"
            style="@style/style_bt_control" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@id/bt_more"
            android:text="瓦斯"
            style="@style/style_tv_control" />
    </com.layout.utils.PercentRelativeLayout>

</com.layout.utils.PercentRelativeLayout><!-- From: file:/E:/ll_workspace/res/layout/activity_shantu_entrance.xml -->