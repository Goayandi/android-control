<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddressBook" >

    <EditText
        android:id="@+id/father"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="@string/get_fathers_phone" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/mother"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/father"
        android:layout_below="@id/father"
        android:hint="@string/get_mothers_phone" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:onClick="ok"
        android:text="上传" />

</RelativeLayout><!-- From: file:/E:/ll_workspace/res/layout/activity_address_book.xml -->