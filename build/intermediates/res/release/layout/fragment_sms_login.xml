<?xml version="1.0" encoding="utf-8"?>
<com.layout.utils.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_shape">
    <LinearLayout
        android:id="@+id/ll_state"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_heightPercent="5%"
        app:layout_marginLeftPercent="4%"
        app:layout_marginRightPercent="4%"
        app:layout_marginTopPercent="6%"
        app:layout_widthPercent="100%" />

    <TextView
        android:id="@+id/tv_state_num"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:drawableRight="@drawable/edit_left"
        android:text="+86"
        android:gravity="center"
        android:textColor="@android:color/white"
        app:layout_heightPercent="15%"
        app:layout_marginLeftPercent="4%"
        app:layout_marginTopPercent="6%"
        app:layout_widthPercent="10%" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@android:color/white"
        android:gravity="center|left"
        app:layout_heightPercent="15%"
        app:layout_marginLeftPercent="17%"
        app:layout_marginTopPercent="6%"
        app:layout_widthPercent="40%"
        android:text="@string/china"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="15%"
        app:layout_marginLeftPercent="4%"
        app:layout_marginTopPercent="25%"
        app:layout_widthPercent="10%"
        android:background="@null"
        android:drawableRight="@drawable/edit_left"
        android:drawableStart="@drawable/phonenumber"/>

    <EditText
        android:id="@+id/edit_phonenumber"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="15%"
        app:layout_marginLeftPercent="17%"
        app:layout_marginTopPercent="24%"
        app:layout_textSizePercent="7%"
        app:layout_widthPercent="40%"
        android:background="@null"
        android:hint="@string/number"
        android:inputType="number"
        android:maxLength="11"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="15%"
        app:layout_marginLeftPercent="4%"
        app:layout_marginTopPercent="45%"
        app:layout_widthPercent="10%"
        android:background="@null"
        android:drawableRight="@drawable/edit_left"
        android:drawableStart="@drawable/self" />

    <EditText
        android:id="@+id/edit_vaildcode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="15%"
        app:layout_marginLeftPercent="17%"
        app:layout_marginTopPercent="44%"
        app:layout_textSizePercent="7%"
        app:layout_widthPercent="40%"
        android:background="@null"
        android:hint="@string/inputvaildcode"
        android:inputType="number"
        android:maxLength="4"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

    <Button
        android:id="@+id/getvaild"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        app:layout_heightPercent="15%"
        app:layout_marginRightPercent="4%"
        app:layout_marginTopPercent="45%"
        app:layout_textSizePercent="6%"
        app:layout_widthPercent="23%"
        android:background="@drawable/getvilery"
        android:text="@string/getvaild"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="20%"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="70%"
        android:background="@drawable/title_shape"
        android:text="@string/login"
        android:textColor="@android:color/white" />
</com.layout.utils.PercentRelativeLayout><!-- From: file:/E:/ll_workspace/res/layout/fragment_sms_login.xml -->